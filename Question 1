def lesser_of_two_evens(a,b):
    if (a%2==0) & (b%2==0):
        if (a<b):
            return(a)
        else:
            return(b)
    elif (a>b):
        return(a)
    else:
        return(b)


# Check
result = lesser_of_two_evens(2,4)
print(result)

result = lesser_of_two_evens(2,5)
print(result)
    
